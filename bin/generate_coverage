#!/usr/bin/env php
<?php

$rootDir = __DIR__ . '/..';

system("docker-compose -f $rootDir/tests/container/docker-compose.yml run --rm application php -dzend_extension=xdebug.so 'vendor/bin/phpunit--coverage-text--coverage-clover=coverage.clover.xml'");
system("docker-compose -f $rootDir/tests/container/docker-compose.yml down");

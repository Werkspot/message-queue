#!/usr/bin/env php
<?php

$rootDir = __DIR__ . '/..';
$argumentList = $argv;
unset($argumentList[0]);
$returnVal = 0;

$env = getenv('ENV') ?: 'dev';
$command = 'php vendor/bin/php-cs-fixer fix --verbose ' . implode(' ', $argumentList);
switch ($env) {
    case 'ci':
        system($command, $returnVal);
        break;
    default:
        system(
            "docker run --volume $rootDir:/opt/message-queue -w /opt/message-queue --rm werkspot/message-queue:application_php_7.1 " . $command,
            $returnVal
        );
}

exit($returnVal);
